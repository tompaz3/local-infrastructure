  "definitions": {
    "us:postgresUserSchema": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "create": {
          "type": "boolean"
        },
        "username": {
          "type": "string"
        },
        "password": {
          "type": "string"
        },
        "secretName": {
          "type": "string"
        }
      },
      "required": [
        "name",
        "create"
      ]
    }
  }
